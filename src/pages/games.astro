---
import Navbar from "../components/navbar.astro"
import Footer from "../components/footer.astro"
import "../styles/global.css"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/TinyTableIconEmptyBackground.png" />
    <meta name="viewport" content="width=device-width" />
    <title>Tiny Table - The Game Drawer</title>
    <style>
      .gameDrawerHeader{
        text-align: center;
        justify-content: center;
        padding: 20px;
      }
      .gameSegmentLeft{
        height: 30vh;
        width: 50%;
        margin-top: 20px;
        margin-bottom: 20px;
        text-align: right;
        display: flex;
        flex-direction: row;
        align-items: center;
      }
      .gameSegmentRight{
        height: 30vh;
        width: 50%;
        margin-top: 20px;
        margin-bottom: 20px;
        text-align: left;
        display: flex;
        flex-direction: row;
        align-items: center;
      }
      .gameIconLeft{
        height: 28vh;
      }
      .gameIconRight{
        height: 28vh;
      }
      .gameTextContainer{
        width: 80%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
      }
      .gameName{
        height: 20%;
        margin: 0px;
      }
      .bodyContentContainer{
        background-color: #94d6e6;
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
      }
    </style>
  </head>
  <body>
    <div>
      <Navbar />
      <div class="bodyContentContainer">
        <div class="gameDrawerHeader">
          <h1>Games Drawer</h1>
          <p>Explore the games featured on Tiny Table!</p>
        </div>
        <div class="gameSegmentLeft">
          <img class="gameIconLeft" src="mothership.jpg">
          <div class="gameTextContainer">
            <h2 class="gameName">Mothership</h2>
          </div>
        </div>
        <div class="gameSegmentRight">
          <div class="gameTextContainer">
            <h2 class="gameName">Here, There, Be Monsters</h2>
          </div>
          <img class="gameIconRight" src="heretherebemonsters.jpg">
        </div>
        <div class="gameSegmentLeft">
          <img class="gameIconLeft" src="blackmass.png">
          <div class="gameTextContainer">
            <h2 class="gameName">Black Mass</h2>
          </div>
        </div>
        <div class="gameSegmentRight">
          <div class="gameTextContainer">
            <h2 class="gameName">Broke Wizards</h2>
          </div>
          <img class="gameIconRight" src="brokewizards.png">
        </div>
        <div class="gameSegmentLeft">
          <img class="gameIconLeft" src="yeld.png">
          <div class="gameTextContainer">
            <h2 class="gameName">The Magical Land of Yeld</h2>
          </div>
        </div>
        <div class="gameSegmentRight">
          <div class="gameTextContainer">
            <h2 class="gameName">Raccoon Sky Pirates</h2>
          </div>
          <img class="gameIconRight" src="RSP.jpg">
        </div>
        <div class="gameSegmentLeft">
          <img class="gameIconLeft" src="coc.jpeg">
          <div class="gameTextContainer">
            <h2 class="gameName">Call of Cthulhu</h2>
          </div>
        </div>
        <div class="gameSegmentRight">
          <div class="gameTextContainer">
            <h2 class="gameName">Eureka</h2>
          </div>
          <img class="gameIconRight" src="eureka album art.png">
        </div>
        <div class="gameSegmentLeft">
          <img class="gameIconLeft" src="daggerheart.jpg">
          <div class="gameTextContainer">
            <h2 class="gameName">Daggerheart</h2>
          </div>
        </div>
        <div class="gameSegmentRight">
          <div class="gameTextContainer">
            <h2 class="gameName">Fiasco</h2>
          </div>
          <img class="gameIconRight" src="fiasco album art.png">
        </div>
        <div class="gameSegmentLeft">
          <img class="gameIconLeft" src="KOB ALBUM ART.jpeg">
          <div class="gameTextContainer">
            <h2 class="gameName">Kids on Bikes</h2>
          </div>
        </div>
        <div class="gameSegmentRight">
          <div class="gameTextContainer">
            <h2 class="gameName">MÃ–RK BORG</h2>
          </div>
          <img class="gameIconRight" src="mork borg logo.png">
        </div>
        <Footer />
    </div>
  </body>
